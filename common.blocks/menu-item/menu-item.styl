.menu-item_theme_islands {
	&.i-bem {
		&.menu-item_checked {
			 background: 13px 70% no-repeat url("../../desktop.bundles/index/images/tip.svg");
		}
		&.menu-item_hovered {
			background-color: #ddd;
		}
		&.menu-item_selected {
			background-color: #96549e;
			transition: background-color 0.6s;
			color: #eee;
			
		}
	}
}

.menu-item {
	font-family: Helvetica;
	font-size: 16px;
	color: #333;
	line-height: 32px;
	overflow: scroll;
}

.menu-item_dir {
	font-family: Helvetica;
	color: #600;
	font-size: 16px;
	font-weight: bolder;
	font-variant: small-caps;
	font-size: 1.1em
	line-height: 32px;
}




